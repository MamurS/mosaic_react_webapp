# Insurance Management System - Environment Variables Template
# Copy this file to .env and update the values for your environment

# ==================== API CONFIGURATION ====================

# Django Backend API URL
# Development: http://127.0.0.1:8000/api
# Production: https://your-api-domain.com/api
REACT_APP_API_URL=http://127.0.0.1:8000/api

# API Timeout (in milliseconds)
REACT_APP_API_TIMEOUT=30000

# API Rate Limiting
REACT_APP_API_RATE_LIMIT=100

# ==================== APPLICATION SETTINGS ====================

# Application Version (automatically updated during build)
REACT_APP_VERSION=1.0.0

# Application Name
REACT_APP_NAME="Insurance Management System"

# Application Description
REACT_APP_DESCRIPTION="Professional Insurance Management System"

# Build Date (automatically set during CI/CD)
REACT_APP_BUILD_DATE=2025-01-01T00:00:00Z

# Environment (development, staging, production)
REACT_APP_ENVIRONMENT=development

# ==================== FEATURE FLAGS ====================

# Enable/disable features for different environments
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_REPORTS=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_DEBUG_MODE=false

# ClientSearch Configuration
REACT_APP_SEARCH_DEBOUNCE_DELAY=300
REACT_APP_SEARCH_MIN_LENGTH=1
REACT_APP_SEARCH_MAX_RESULTS=50

# ==================== SECURITY SETTINGS ====================

# JWT Token Settings
REACT_APP_TOKEN_REFRESH_THRESHOLD=300000
REACT_APP_TOKEN_STORAGE_KEY=authToken

# Session Settings
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_REMEMBER_ME_DURATION=2592000000

# CORS Settings (for development)
REACT_APP_CORS_ENABLED=true

# ==================== UI/UX CONFIGURATION ====================

# Theme Settings
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=false

# Language Settings
REACT_APP_DEFAULT_LANGUAGE=ru
REACT_APP_SUPPORTED_LANGUAGES=ru,en

# Animation Settings
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_ANIMATION_DURATION=300

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_PAGE_SIZE=100

# ==================== EXTERNAL SERVICES ====================

# Google Analytics (optional)
REACT_APP_GA_TRACKING_ID=

# Sentry Error Tracking (optional)
REACT_APP_SENTRY_DSN=

# LogRocket Session Replay (optional)
REACT_APP_LOGROCKET_APP_ID=

# Hotjar Analytics (optional)
REACT_APP_HOTJAR_SITE_ID=

# ==================== FILE UPLOAD SETTINGS ====================

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,xlsx,docx
REACT_APP_UPLOAD_ENDPOINT=/upload/

# ==================== NOTIFICATION SETTINGS ====================

# Push Notifications
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=false
REACT_APP_VAPID_PUBLIC_KEY=

# Email Notifications
REACT_APP_ENABLE_EMAIL_NOTIFICATIONS=true

# ==================== DEVELOPMENT SETTINGS ====================

# Development Tools
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_WHY_DID_YOU_RENDER=false

# Hot Reload
FAST_REFRESH=true
ESLINT_NO_DEV_ERRORS=true

# Source Maps
GENERATE_SOURCEMAP=true

# Bundle Analyzer
REACT_APP_ENABLE_BUNDLE_ANALYZER=false

# ==================== PERFORMANCE SETTINGS ====================

# Code Splitting
REACT_APP_ENABLE_CODE_SPLITTING=true

# Service Worker
REACT_APP_ENABLE_SERVICE_WORKER=true

# Lazy Loading
REACT_APP_ENABLE_LAZY_LOADING=true

# Image Optimization
REACT_APP_ENABLE_IMAGE_OPTIMIZATION=true

# ==================== TESTING CONFIGURATION ====================

# Testing Environment
REACT_APP_TESTING_MODE=false
REACT_APP_MOCK_API=false

# Test Coverage
REACT_APP_COVERAGE_THRESHOLD=80

# ==================== LOGGING CONFIGURATION ====================

# Log Level (error, warn, info, debug)
REACT_APP_LOG_LEVEL=info

# Enable Console Logging
REACT_APP_ENABLE_CONSOLE_LOGS=true

# Remote Logging
REACT_APP_ENABLE_REMOTE_LOGGING=false
REACT_APP_LOG_ENDPOINT=

# ==================== CACHE SETTINGS ====================

# Browser Cache
REACT_APP_CACHE_VERSION=1.0.0

# API Cache Duration (in seconds)
REACT_APP_API_CACHE_DURATION=300

# Static Assets Cache
REACT_APP_ASSETS_CACHE_DURATION=86400

# ==================== SOCIAL MEDIA & SHARING ====================

# Open Graph Meta Tags
REACT_APP_OG_TITLE="Insurance Management System"
REACT_APP_OG_DESCRIPTION="Professional Insurance Management System"
REACT_APP_OG_IMAGE=
REACT_APP_OG_URL=

# Twitter Card
REACT_APP_TWITTER_CARD=summary_large_image
REACT_APP_TWITTER_SITE=
REACT_APP_TWITTER_CREATOR=

# ==================== COMPANY INFORMATION ====================

# Company Details
REACT_APP_COMPANY_NAME="Your Insurance Company"
REACT_APP_COMPANY_EMAIL=info@yourcompany.com
REACT_APP_COMPANY_PHONE=+1-234-567-8900
REACT_APP_COMPANY_ADDRESS="123 Business St, City, Country"

# Support Information
REACT_APP_SUPPORT_EMAIL=support@yourcompany.com
REACT_APP_SUPPORT_PHONE=+1-234-567-8911

# ==================== LEGAL & COMPLIANCE ====================

# Privacy Policy
REACT_APP_PRIVACY_POLICY_URL=
REACT_APP_TERMS_OF_SERVICE_URL=
REACT_APP_COOKIE_POLICY_URL=

# GDPR Compliance
REACT_APP_GDPR_ENABLED=false
REACT_APP_COOKIE_CONSENT_REQUIRED=false

# ==================== DEPLOYMENT SETTINGS ====================

# Build Configuration
REACT_APP_BUILD_PATH=build
REACT_APP_PUBLIC_PATH=/

# CDN Configuration
REACT_APP_CDN_URL=
REACT_APP_STATIC_URL=

# Domain Configuration
REACT_APP_DOMAIN=localhost:3000
REACT_APP_SECURE_COOKIES=false

# ==================== MONITORING & HEALTH CHECKS ====================

# Health Check Endpoint
REACT_APP_HEALTH_CHECK_URL=/health

# Status Page
REACT_APP_STATUS_PAGE_URL=

# Uptime Monitoring
REACT_APP_UPTIME_ROBOT_KEY=

# ==================== ADVANCED CONFIGURATION ====================

# Webpack Bundle Splitting
REACT_APP_CHUNK_SIZE_LIMIT=500000

# Tree Shaking
REACT_APP_ENABLE_TREE_SHAKING=true

# Polyfills
REACT_APP_INCLUDE_POLYFILLS=true

# Browser Support
REACT_APP_BROWSER_SUPPORT="defaults, not ie 11"

# ==================== DEVELOPMENT PROXY ====================

# Proxy Configuration for Development
# This proxies API requests to the Django backend
PROXY_URL=http://127.0.0.1:8000

# ==================== CUSTOM ENVIRONMENT VARIABLES ====================

# Add your custom environment variables here
# REACT_APP_CUSTOM_VARIABLE=value

# ==================== NOTES ====================

# 1. All variables must start with REACT_APP_ to be accessible in the React app
# 2. Do not commit sensitive information like API keys to version control
# 3. Use different .env files for different environments (.env.development, .env.production)
# 4. Boolean values should be strings: "true" or "false"
# 5. URLs should not have trailing slashes unless specifically required
# 6. File sizes are in bytes (5242880 = 5MB)
# 7. Timeouts are in milliseconds (30000 = 30 seconds)

# ==================== ENVIRONMENT EXAMPLES ====================

# Development Example:
# REACT_APP_API_URL=http://127.0.0.1:8000/api
# REACT_APP_ENVIRONMENT=development
# REACT_APP_ENABLE_DEBUG_MODE=true

# Production Example:
# REACT_APP_API_URL=https://api.yourcompany.com/api
# REACT_APP_ENVIRONMENT=production
# REACT_APP_ENABLE_DEBUG_MODE=false